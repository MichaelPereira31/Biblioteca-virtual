// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @unique @default(uuid())
  email     String     @unique
  name      String
  password  String
  createdAt DateTime   @default(now()) @map("created_at")
  Favorite  Favorite[]

  @@map("user")
}

model Author {
  id          String   @unique @default(uuid())
  name        String
  birth       String
  nationality String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  Book        Book[]

  @@map("author")
}

model Book {
  id        String   @unique @default(uuid())
  title     String
  gender    String
  language  String
  published String
  synopsis  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  author   Author     @relation(fields: [authorId], references: [id])
  authorId String
  Favorite Favorite[]

  @@map("book")
}

model Favorite {
  id     String @unique @default(uuid())
  
  user   User   @relation(fields: [userId], references: [id])
  userId String

  books     Book     @relation(fields: [bookId], references: [id])
  bookId    String

  status    Status

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("favorite")
}

enum Status {
  SAVE
  READ
}
